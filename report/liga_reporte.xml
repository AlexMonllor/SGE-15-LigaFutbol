
<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Plantilla de l'informe associat a un partit -->
    <template id="report_partido_resultado_view">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <!-- Capçalera amb els equips i el resultat -->
                        <h2>
                            Resultat del partit
                        </h2>
                        <p>
                            Equip local: <span t-field="doc.equipo_casa.nombre" />
                        </p>
                        <p>
                            Gols local: <span t-field="doc.goles_casa" />
                        </p>
                        <p>
                            Equip visitant: <span t-field="doc.equipo_fuera.nombre" />
                        </p>
                        <p>
                            Gols visitant: <span t-field="doc.goles_fuera" />
                        </p>
                        <!-- Resum del resultat -->
                        <p>
                            <strong>
                                Resultat: 
                                <t t-esc="f'{doc.equipo_casa.nombre} {doc.goles_casa} - {doc.goles_fuera} {doc.equipo_fuera.nombre}'" />
                            </strong>
                        </p>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Configuració de l'informe -->
    <report 
        id="report_partido_resultado" 
        model="liga.partido" 
        string="Informe del resultat del partit" 
        name="liga_futbol.report_partido_resultado_view" 
        file="liga_futbol.report_partido_resultado_view" 
        report_type="qweb-pdf" 
    />

</odoo>
